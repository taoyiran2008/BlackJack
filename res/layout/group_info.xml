<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="80dp"
    android:layout_height="wrap_content"
    android:background="#C6EBE4"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="10dp"
        android:layout_gravity="left"
        android:layout_marginBottom="2dp"
        android:background="#89D8E4"
        android:gravity="left"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="timer"
            android:textSize="8sp" />

        <Chronometer
            android:id="@+id/timer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_weight="1"
            android:textSize="8sp"
            android:format="00:00:00"
            android:text="Chronometer" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="10dp"
        android:layout_gravity="left"
        android:layout_marginBottom="2dp"
        android:background="#89D8E4"
        android:gravity="left"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="max round"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/max_round"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="1"
            android:textSize="8sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="10dp"
        android:layout_gravity="left"
        android:layout_marginBottom="2dp"
        android:background="#89D8E4"
        android:gravity="left"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="set"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/set_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="1"
            android:textSize="8sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="10dp"
        android:layout_gravity="left"
        android:layout_marginBottom="2dp"
        android:background="#89D8E4"
        android:gravity="left"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="round"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/round_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="1"
            android:textSize="8sp" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="10dp"
        android:layout_gravity="left"
        android:layout_marginBottom="2dp"
        android:background="#89D8E4"
        android:gravity="left"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="total bet"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/total_bet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="1"
            android:textSize="8sp" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="10dp"
        android:layout_gravity="left"
        android:layout_marginBottom="2dp"
        android:background="#89D8E4"
        android:gravity="left"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="all money"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/total_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="1"
            android:textSize="8sp" />
    </LinearLayout>
</LinearLayout>